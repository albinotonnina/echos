# Required
TELEGRAM_BOT_TOKEN=
ALLOWED_USER_IDS=
ANTHROPIC_API_KEY=

# Optional (needed for embeddings, Whisper)
OPENAI_API_KEY=

# Redis
REDIS_URL=redis://localhost:6379

# Storage paths
KNOWLEDGE_DIR=./data/knowledge
DB_PATH=./data/db
SESSION_DIR=./data/sessions

# LLM settings
DEFAULT_MODEL=claude-sonnet-4-5-20250929
EMBEDDING_MODEL=text-embedding-3-small

# Interfaces (enable/disable) - See docs/INTERFACES.md for details
# Telegram: Message-based bot interface (requires bot token)
ENABLE_TELEGRAM=true
# Web: HTTP API server for integrations (no auth by default)
ENABLE_WEB=true
# TUI: Interactive terminal interface (development/testing)
ENABLE_TUI=false

# Web UI
# Port for Web API server (if ENABLE_WEB=true)
WEB_PORT=3000

# Scheduled tasks (cron expressions, empty = disabled)
DIGEST_SCHEDULE=
NEWSLETTER_SCHEDULE=
TRENDING_SCHEDULE=
