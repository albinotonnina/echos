# Required
TELEGRAM_BOT_TOKEN=
ALLOWED_USER_IDS=

# Anthropic API key (pay-as-you-go API plan required, NOT subscription)
# Get your API key at: https://console.anthropic.com/settings/keys
# Note: Claude Pro/Max subscriptions do NOT provide API access
# See docs/ANTHROPIC_SUBSCRIPTION_INVESTIGATION.md for details
ANTHROPIC_API_KEY=

# Optional (needed for embeddings, Whisper)
OPENAI_API_KEY=

# Redis
REDIS_URL=redis://localhost:6379

# Storage paths
KNOWLEDGE_DIR=./data/knowledge
DB_PATH=./data/db
SESSION_DIR=./data/sessions

# LLM settings
DEFAULT_MODEL=claude-haiku-4-5-20251001
EMBEDDING_MODEL=text-embedding-3-small

# Interfaces (enable/disable) - See docs/INTERFACES.md for details
# Telegram: Message-based bot interface (requires bot token)
ENABLE_TELEGRAM=true
# Web: HTTP API server for integrations
ENABLE_WEB=true

# Web UI
# Port for Web API server (if ENABLE_WEB=true)
WEB_PORT=3000

# Scheduler (requires Redis running on REDIS_URL)
# Set to true to enable background job processing (digests, reminders)
# If Redis is unavailable at startup, the scheduler is skipped gracefully.
ENABLE_SCHEDULER=false

# Scheduled tasks (cron expressions)
# - Empty = disabled
# - All schedules use standard cron format: "minute hour day-of-month month day-of-week"
# - Tools like https://crontab.guru/ help build valid expressions


# Daily digest: AI-generated summary of recent notes and reminders
# Example: Every day at 8:00 AM
DIGEST_SCHEDULE=0 9 * * *
# Example: Every weekday (Mon-Fri) at 7:00 AM
# DIGEST_SCHEDULE=0 7 * * 1-5

# Reminder check: Notify on due/past-due reminders (low API cost, no AI)
# Example: Every 15 minutes
REMINDER_CHECK_SCHEDULE=*/15 * * * *
# Example: Every hour
# REMINDER_CHECK_SCHEDULE=0 * * * *

# Webshare Proxy (optional, for YouTube rate-limit bypass)
# WEBSHARE_PROXY_USERNAME=
# WEBSHARE_PROXY_PASSWORD=

# Newsletter scraping (future use)
# NEWSLETTER_SCHEDULE=

# Trending content monitor (future use)
# TRENDING_SCHEDULE=

WEB_API_KEY=your-secure-web-api-key-here