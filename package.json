{
  "name": "echos",
  "version": "0.5.6",
  "private": true,
  "description": "Agent-driven personal knowledge management system",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint packages/*/src --ext .ts",
    "lint:fix": "eslint packages/*/src --ext .ts --fix",
    "format": "prettier --write 'packages/*/src/**/*.ts'",
    "format:check": "prettier --check 'packages/*/src/**/*.ts'",
    "typecheck": "pnpm -r typecheck",
    "start": "tsx --env-file=.env src/index.ts",
    "start:web-only": "ENABLE_TELEGRAM=false tsx --env-file=.env src/index.ts",
    "start:with-scheduler": "ENABLE_SCHEDULER=true tsx --env-file=.env src/index.ts",
    "stop": "pkill -f 'tsx.*src/index.ts' || true",
    "redis:status": "./scripts/manage-redis.sh status",
    "redis:start": "./scripts/manage-redis.sh start",
    "redis:stop": "./scripts/manage-redis.sh stop",
    "redis:health": "./scripts/manage-redis.sh health",
    "echos": "tsx --env-file=.env packages/cli/src/index.ts",
    "cli": "tsx packages/core/src/cli.ts",
    "wizard": "tsx scripts/setup.ts",
    "wizard:check": "tsx scripts/setup.ts --check-only",
    "update-echos": "./scripts/update.sh",
    "reconcile": "tsx --env-file=.env scripts/reconcile.ts",
    "import:obsidian": "tsx --env-file=.env scripts/import-obsidian.ts",
    "import:notion": "tsx --env-file=.env scripts/import-notion.ts",
    "generate-test-notes": "tsx --env-file=.env scripts/generate-test-notes.ts",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "deploy": "./scripts/deploy-fast.sh",
    "release": "tsx scripts/release.ts"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.30.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "msgpackr-extract",
      "protobufjs",
      "sharp"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@echos/shared": "workspace:*",
    "@echos/core": "workspace:*",
    "@echos/telegram": "workspace:*",
    "@echos/web": "workspace:*",
    "@echos/cli": "workspace:*",
    "@echos/scheduler": "workspace:*",
    "@echos/plugin-youtube": "workspace:*",
    "@echos/plugin-article": "workspace:*",
    "@echos/plugin-content-creation": "workspace:*",
    "@echos/plugin-image": "workspace:*",
    "@echos/plugin-digest": "workspace:*",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@clack/prompts": "^1.0.1",
    "gray-matter": "^4.0.3",
    "@eslint/js": "^10.0.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "eslint-plugin-security": "^3.0.1",
    "picocolors": "^1.1.1",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}