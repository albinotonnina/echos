{
  "name": "echos",
  "version": "0.1.0",
  "private": true,
  "description": "Agent-driven personal knowledge management system",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint packages/*/src --ext .ts",
    "lint:fix": "eslint packages/*/src --ext .ts --fix",
    "format": "prettier --write 'packages/*/src/**/*.ts'",
    "format:check": "prettier --check 'packages/*/src/**/*.ts'",
    "typecheck": "pnpm -r typecheck",
    "start": "tsx --env-file=.env src/index.ts",
    "start:web-only": "ENABLE_TELEGRAM=false ENABLE_TUI=false tsx --env-file=.env src/index.ts",
    "start:tui-only": "ENABLE_TELEGRAM=false ENABLE_WEB=false ENABLE_TUI=true tsx --env-file=.env src/index.ts",
    "stop": "pkill -f 'tsx.*src/index.ts' || true",
    "cli": "tsx packages/core/src/cli.ts",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "deploy": "./scripts/deploy-fast.sh"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "license": "MIT",
  "dependencies": {
    "@echos/plugin-youtube": "workspace:*",
    "@echos/plugin-article": "workspace:*",
    "@echos/plugin-content-creation": "workspace:*",
    "@echos/scheduler": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-plugin-security": "^3.0.1",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
